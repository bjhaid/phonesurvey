<h1><%= link_to @product.name, @product %> &raquo Survey</h1>

<p>
  <b>Question:</b>
  <%= @survey.question %>
</p>

<p>
  <b>Yes no:</b>
  <%= @survey.yes_no %>
</p>

<h3>Listing feedbacks</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Survey</th>
      <th>Answer</th>
      <th>Callerid</th>
    </tr>
  </thead>
  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.survey_id %></td>
        <td><%= feedback.answer %></td>
        <td><%= feedback.callerid %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back to product")),
              product_path(@product), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit survey")),
              edit_product_survey_path(@product), :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.delete")),
              [@product, @survey],
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
