<h1><%= link_to @product.name, @product %> &raquo Listing surveys</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Question</th>
    <th>Yes no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= @product.name %></td>
    <td><%= survey.question %></td>
    <td><%= survey.yes_no %></td>
    <td><%= link_to 'Show', product_survey_path(@product, survey) %></td>
    <td><%= link_to 'Edit', edit_product_survey_path(@product, survey) %></td>
    <td><%= link_to 'Destroy', [@product, survey], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if @product.surveys.size < 3 %>
  <%= link_to t('.new', :default => t("helpers.links.new survey")),
              new_product_survey_path,
              :class => 'btn btn-primary' %>
<% end %>
